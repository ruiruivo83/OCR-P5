{% extends "_layout.html.twig" %}


{% block topbar %}
    {{ include('/backend/user_topbar.html') }}
{% endblock %}

{% block body %}
    <div class="card m-1">
        <div class="card-header">
            <div class="w-100">
                My GROUPS
            </div>

        </div>
        <div class="card-body p-0">
            <div class="w-100">
                <a href="index.php?action=creategroup">
                    <button type="button" class="btn btn-primary btn-sm m-1">Create Groupe</button>
                </a>
            </div>

            <table id="dtBasicExample" class="table table-striped table-bordered table-sm m-0" cellspacing="0"
                   width="100%">

                <thead>
                <tr>
                    <th class="th-sm">Group Id
                    </th>
                    <th class="th-sm">Group Name
                    </th>
                    <th class="th-sm">Group Description
                    </th>
                    <th class="th-sm">Creation Date
                    </th>
                    <th class="th-sm align-items-end">
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for result in results %}
                    <tr>
                        <td class="">  {{ result.id }} </td>
                        <td class="">  {{ result.group_name }} </td>
                        <td style="max-width: 100px; ">  {{ result.group_description }} </td>
                        <td class="">  {{ result.creation_date }} </td>
                        <td class="text-md-center">
                            <a class="mr-2" href="index.php?action=groupdetails&id={{ result.id }}"><i class="fas fa-lg fa-info-circle"></i></a>
                            <a class="mr-2" href="index.php?action=creategroup"><i class="fas fa-lg fa-user-friends"></i></a>
                            <a class="mr-2" href="index.php?action=creategroup"><i class="fas fa-lg fa-window-close" ></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th class="th-sm">Group Id
                    </th>
                    <th class="th-sm">Group Name
                    </th>
                    <th class="th-sm">Group Description
                    </th>
                    <th class="th-sm">Creation Date
                    </th>
                    <th class="th-sm">
                    </th>
                </tr>
                </tfoot>
            </table>

        </div>
    </div>
{% endblock %}