{% extends "_layout.html.twig" %}


{% block topbar %}
    {{ include('/backend/user_topbar.html.twig') }}
{% endblock %}

{% block body %}
    <div class="card m-1">
        <div class="card-header">
            <div class="w-100">
                <i class="fas fa-users mr-3 fa-2x"></i>My GROUPS
            </div>

        </div>
        <div class="card-body p-0">
            <div class="w-100">
                <a href="index.php?action=creategroup">
                    <button type="button" class="btn btn-primary btn-sm m-1">Create Groupe</button>
                </a>
            </div>

            <table id="dtBasicExample" class="table table-striped table-bordered table-sm m-0 " cellspacing="0"
                   width="100%">

                <thead>
                <tr>
                    <th class="th-sm">Group Id
                    </th>
                    <th class="th-sm">Group Name
                    </th>
                    <th class="th-sm">Group Description
                    </th>
                    <th class="th-sm">Creation Date
                    </th>
                    <th class="th-sm align-items-end">
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for group in mygroups %}
                    <tr>
                        <td class="table_text_overflow_ellipsis"><i
                                    class="fas fa-users mr-3"></i> {{ group.getId() }}
                        </td>
                        <td class="table_text_overflow_ellipsis">  {{ group.getGroupName() }} </td>
                        <td class="table_text_overflow_ellipsis">  {{ group.getGroupDescription() }} </td>
                        <td class="table_text_overflow_ellipsis">  {{ group.getCreationDate() }} </td>
                        <td class="table_text_overflow_ellipsis">
                            <a class="mr-2" href="index.php?action=groupdetails&id={{ group.getId() }}">Details</a>
                            <a class="mr-2" href="index.php?action=groupmembers&groupid={{ group.getId() }}">Members</a>

                            <!-- CLOSE MODAL -->
                            <a href="#" data-href="index.php?action=closegroup&groupid={{ group.getId() }}"
                               data-toggle="modal" data-target="#confirm-delete">Close</a>

                            <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog"
                                 aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            Closing Group: #{{ group.getId() }} {{ group.getGroupName() }}
                                        </div>
                                        <div class="modal-body">
                                            Are you sure ?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel
                                            </button>
                                            <a href="index.php?action=closegroupfunction&groupid={{ group.getId() }}"
                                               class="btn btn-danger btn-ok">Close</a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th class="th-sm">Group Id
                    </th>
                    <th class="th-sm">Group Name
                    </th>
                    <th class="th-sm">Group Description
                    </th>
                    <th class="th-sm">Creation Date
                    </th>
                    <th class="th-sm">
                    </th>
                </tr>
                </tfoot>
            </table>

        </div>
    </div>
{% endblock %}