{% extends "_layout.html.twig" %}


{% block topbar %}
    {{ include('/backend/user_topbar.html') }}
{% endblock %}

{% block body %}
    <div class="card m-1">
        <div class="card-header">
            <h6>GLOBAL GROUPS</h6>
        </div>
        <div class="card-body">


            <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">

                <thead>
                <tr>
                    <th class="th-sm">Group Name
                    </th>
                    <th class="th-sm">Group Admin
                    </th>
                    <th class="th-sm">Creation Date
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for result in results %}
                    <tr>
                        <td>  {{ result.group_name }}</td>
                        <td>  {{ result.group_admin }}</td>
                        <td>  {{ result.creation_date }}</td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th class="th-sm">Group Name
                    </th>
                    <th class="th-sm">Group Admin
                    </th>
                    <th class="th-sm">Creation Date
                    </th>
                </tr>
                </tfoot>
            </table>

        </div>
    </div>
{% endblock %}