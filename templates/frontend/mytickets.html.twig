{% extends "_layout.html.twig" %}


{% block topbar %}
    {{ include('/backend/user_topbar.html') }}
{% endblock %}

{% block body %}


    <div class="card m-1">
        <div class="card-header">
            <div class="w-100">
                My TICKETS
            </div>
        </div>

        <div class="card-body p-0">
            <table id="dtBasicExample" class="table table-striped table-bordered table-sm m-0" cellspacing="0"
                   width="100%">
                <thead>
                <tr>
                    <th class="th-sm">Id
                    </th>
                    <th class="th-sm">Creation Date
                    </th>
                    <th class="th-sm">Requester
                    </th>
                    <th class="th-sm">Title
                    </th>
                    <th class="th-sm">Description
                    </th>
                    <th class="th-sm">Author
                    </th>
                    <th class="th-sm">
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for result in results %}
                    <tr>
                        <td><i class="fas fa-ticket-alt mr-3"></i> {{ result.id }}</td>
                        <td>  {{ result.creation_date }}</td>
                        <td>  {{ result.requester }}</td>
                        <td>  {{ result.title }}</td>
                        <td>  {{ result.description }}</td>
                        <td>  {{ result.author }} </td>
                        <td><a class="mr-2" href="index.php?action=ticketdetails&id={{ result.id }}">Details</a></td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th class="th-sm">Id
                    </th>
                    <th class="th-sm">Creation Date
                    </th>
                    <th class="th-sm">Requester
                    </th>
                    <th class="th-sm">Title
                    </th>
                    <th class="th-sm">Description
                    </th>
                    <th class="th-sm">Author
                    </th>
                    <th class="th-sm">
                    </th>
                </tr>
                </tfoot>
            </table>
        </div>
    </div>
{% endblock %}