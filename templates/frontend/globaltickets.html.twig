{% extends "_layout.html.twig" %}


{% block topbar %}
    {{ include('/backend/user_topbar.html') }}
{% endblock %}

{% block body %}
    <div class="card m-1">
        <div class="card-header">
            <div class="w-100">
                GLOBAL TICKETS
            </div>

        </div>
        <div class="card-body p-0">
            <div class="w-100">
                <button type="button" class="btn btn-primary btn-sm m-1">Button</button>


            </div>
            <table id="dtBasicExample" class="table table-striped table-bordered table-sm m-0" cellspacing="0" width="100%">

                <thead>
                <tr>
                    <th class="th-sm">Ticket Id
                    </th>
                    <th class="th-sm">Requester
                    </th>
                    <th class="th-sm">Title
                    </th>
                    <th class="th-sm">Creation Date
                    </th>
                    <th class="th-sm">Description
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for result in results %}
                    <tr>
                        <td>  {{ result.id }}</td>
                        <td>  {{ result.requester }}</td>
                        <td>  {{ result.title }}</td>
                        <td>  {{ result.creation_date }}</td>
                        <td>  {{ result.description }}</td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th class="th-sm">Ticket Id
                    </th>
                    <th class="th-sm">Requester
                    </th>
                    <th class="th-sm">Title
                    </th>
                    <th class="th-sm">Creation Date
                    </th>
                    <th class="th-sm">Description
                    </th>
                </tr>
                </tfoot>
            </table>

        </div>
    </div>
{% endblock %}