{% extends "_layout.html.twig" %}


{% block topbar %}
    {{ include('/backend/user_topbar.html') }}
{% endblock %}

{% block body %}

    <!-- TICKET DETAILS-->
    <div class="card m-1">
        <div class="card-header">
            <div class="w-100">
                <i class="fas fa-ticket-alt fa-2x mr-3"></i>TICKET DETAILS
            </div>
        </div>
        <div class="card-body p-0">
            <br>
            {% for result in groupresults %}
                <table class="mr-3 ml-3 col-md-12">
                    <tbody>
                    <tr>
                        <td>Group Id:</td>
                        <td>{{ result.id }}</td>
                    </tr>
                    <tr>
                        <td> Group Name:</td>
                        <td>{{ result.group_name }}</td>
                    </tr>
                    <tr>
                        <td> Group Admin:</td>
                        <td> {{ result.group_admin }}</td>
                    </tr>
                    <tr>
                        <td>Status:</td>
                        <td>{{ result.group_status }}</td>
                    </tr>
                    <tr>
                        <td>Creation Date:</td>
                        <td>{{ result.creation_date }}</td>
                    </tr>
                    <tr>
                        <td>Description:</td>
                        <td>{{ result.group_description }}</td>
                    </tr>
                    </tbody>
                </table>
            {% endfor %}
            <br>
            {% for ticket in ticketresults %}
                <table class="mr-3 ml-3 col-md-6">
                    <tbody>
                    <tr>
                        <td>Ticket Id:</td>
                        <td>{{ ticket.author }}</td>
                    </tr>
                    <tr>
                        <td> Ticket Title:</td>
                        <td>{{ ticket.title }}</td>
                    </tr>
                    <tr>
                        <td> Ticket Author:</td>
                        <td> {{ ticket.author }}</td>
                    </tr>
                    <tr>
                        <td>Ticket Status:</td>
                        <td>{{ ticket.status }}</td>
                    </tr>
                    <tr>
                        <td>Creation Date:</td>
                        <td>{{ ticket.creation_date }}</td>
                    </tr>
                    <tr>
                        <td>Description:</td>
                        <td>{{ ticket.description }}</td>
                    </tr>
                    </tbody>
                </table>
            {% endfor %}
        </div>
    </div>


    <!-- INTERVENTIONS -->
    <div class="card m-1">
        <div class="card-header">
            <div class="w-100">
                TICKET INTERVENTIONS
            </div>
        </div>
        <div class="card-body p-0">
            <div class="w-100">
                {% for result in ticketresults %}
                <a href="index.php?action=createintervention&ticketid={{ result.id }}">
                    {% endfor %}
                    <button type="button" class="btn btn-primary btn-sm m-1">Create Intervention</button>

                </a>
            </div>
            <br>

            <table id="dtBasicExample" class="table table-striped table-bordered table-sm m-0" cellspacing="0"
                   width="100%">

                <thead>
                <tr>
                    <th class="th-sm">Id
                    </th>
                    <th class="th-sm">Intervention Date
                    </th>
                    <th class="th-sm">Intervention Description
                    </th>
                    <th class="th-sm">Author
                    </th>
                    <th class="th-sm">Author Company
                    </th>
                    <th class="th-sm">Author Country
                    </th>
                    <th class="th-sm">
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for intervention in interventionresults %}
                    <tr>
                        <td><i class="fas fa-check mr-3"></i> {{ intervention.id }}</td>
                        <td>  {{ intervention.intervention_date }}</td>
                        <td>  {{ intervention.intervention_description }}</td>
                        <td>  {{ intervention.intervention_author }}</td>
                        <td>  {{ intervention.intervention_author_company }} </td>
                        <td>  {{ intervention.intervention_author_country }} </td>
                        <td>
                            <a href="#"><i class="fas fa-paperclip mr-1"><sup>(5)</sup></i></a>
                            <a href="#"><i class="fas fa-image mr-1"><sup>(3)</sup></i></a>
                            <a href="#">Info</a></td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th class="th-sm">Id
                    </th>
                    <th class="th-sm">Intervention Date
                    </th>
                    <th class="th-sm">Intervention Description
                    </th>
                    <th class="th-sm">Author
                    </th>
                    <th class="th-sm">Author Description
                    </th>
                    <th class="th-sm">Author Country
                    </th>
                    <th class="th-sm">
                    </th>
                </tr>
                </tfoot>
            </table>
        </div>
    </div>

{% endblock %}