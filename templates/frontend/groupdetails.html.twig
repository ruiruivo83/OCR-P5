{% extends "_layout.html.twig" %}


{% block topbar %}
    {{ include('/backend/user_topbar.html.twig') }}
{% endblock %}

{% block body %}

    <div class="card m-1">
        <div class="card-header">
            <div class="w-100">
                <i class="fas fa-user-friends fa-2x mr-3"></i>GROUP DETAILS
                {% for result in groupresults %}
                    <!-- BUTTON CLOSE THIS GROUP -->
                    <button type="button" class="btn btn-primary btn-sm float-right" data-toggle="modal"
                            data-target="#confirm-close">
                        Close Group
                    </button>
                    <div class="modal fade" id="confirm-close" tabindex="-1" role="dialog"
                         aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    Closing Group: <span
                                            class=""><h6>#{{ result.id }} - {{ result.group_name }}</h6></span>
                                </div>
                                <div class="modal-body">
                                    Are you sure ?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel
                                    </button>
                                    <a href="index.php?action=closegroupfunction&groupid={{ result.id }}"
                                       class="btn btn-danger btn-ok">Close</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="card-body p-0">
            <br>
            {% for result in groupresults %}
                <table class="mr-3 ml-3 col-md-12">
                    <tbody>
                    <tr>
                        <td>Group Id:</td>
                        <td>{{ result.id }}</td>
                    </tr>
                    <tr>
                        <td> Group Name:</td>
                        <td>{{ result.group_name }}</td>
                    </tr>
                    <tr>
                        <td> Group Admin Id:</td>
                        <td> {{ result.group_admin_id }}</td>
                    </tr>
                    <tr>
                        <td>Status:</td>
                        <td>{{ result.group_status }}</td>
                    </tr>
                    <tr>
                        <td>Creation Date:</td>
                        <td>{{ result.creation_date }}</td>
                    </tr>
                    <tr>
                        <td>Description:</td>
                        <td>{{ result.group_description }}</td>
                    </tr>
                    </tbody>
                </table>
            {% endfor %}
        </div>
    </div>

    <div class="card m-1">
    <div class="card-header">
        <div class="w-100">
            GROUP TICKETS
        </div>
    </div>

    <div class="card-body p-0">
        <div class="w-100">
            {% for result in groupresults %}
                <!-- BUTTON CREATE TICKET -->
                <a href="index.php?action=createticket&groupid={{ result.id }}">
                    <button type="button" class="btn btn-primary btn-sm m-1">Create Ticket</button>
                </a>
            {% endfor %}

        </div>
        <br>

        <table id="dtBasicExample" class="table table-striped table-bordered table-sm m-0" cellspacing="0"
               width="100%">

            <thead>
            <tr>
                <th class="th-sm">Id
                </th>
                <th class="th-sm">Creation Date
                </th>
                <th class="th-sm">Requester
                </th>
                <th class="th-sm">Title
                </th>
                <th class="th-sm">Description
                </th>
                <th class="th-sm">Author Id
                </th>
                <th class="th-sm">
                </th>
            </tr>
            </thead>
            <tbody>
            {% for result in ticketresults %}
                <tr>
                    <td class="table_text_overflow_ellipsis"><i class="fas fa-ticket-alt mr-3"></i> {{ result.id }}</td>
                    <td class="table_text_overflow_ellipsis">  {{ result.creation_date }}</td>
                    <td class="table_text_overflow_ellipsis">  {{ result.requester }}</td>
                    <td class="table_text_overflow_ellipsis">  {{ result.title }}</td>
                    <td class="table_text_overflow_ellipsis">  {{ result.description }}</td>
                    <td class="table_text_overflow_ellipsis">  {{ result.author_id }} </td>
                    <td class="table_text_overflow_ellipsis"><a class="mr-2"
                                                                href="index.php?action=ticketdetails&id={{ result.id }}">Details</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <th class="th-sm">Id
                </th>
                <th class="th-sm">Creation Date
                </th>
                <th class="th-sm">Requester
                </th>
                <th class="th-sm">Title
                </th>
                <th class="th-sm">Description
                </th>
                <th class="th-sm">Author Id
                </th>
                <th class="th-sm">
                </th>
            </tr>
            </tfoot>
        </table>
    </div>

{% endblock %}