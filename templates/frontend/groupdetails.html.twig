{% extends "_layout.html.twig" %}


{% block topbar %}
    {{ include('/backend/user_topbar.html') }}
{% endblock %}

{% block body %}

    <div class="card m-1">
        <div class="card-header">
            <div class="w-100">
                <i class="fas fa-user-friends fa-2x mr-3"></i>GROUP DETAILS
            </div>
        </div>
        <div class="card-body p-0">
            <br>
            {% for result in groupresults %}
                <table class="mr-3 ml-3 col-md-12">
                    <tbody>
                    <tr>
                        <td>Group Id:</td>
                        <td>{{ result.id }}</td>
                    </tr>
                    <tr>
                        <td> Group Name:</td>
                        <td>{{ result.group_name }}</td>
                    </tr>
                    <tr>
                        <td> Group Admin:</td>
                        <td> {{ result.group_admin }}</td>
                    </tr>
                    <tr>
                        <td>Status:</td>
                        <td>{{ result.group_status }}</td>
                    </tr>
                    <tr>
                        <td>Creation Date:</td>
                        <td>{{ result.creation_date }}</td>
                    </tr>
                    <tr>
                        <td>Description:</td>
                        <td>{{ result.group_description }}</td>
                    </tr>
                    </tbody>
                </table>
            {% endfor %}
        </div>
    </div>

    <div class="card m-1">
    <div class="card-header">
        <div class="w-100">
            GROUP TICKETS
        </div>
    </div>

    <div class="card-body p-0">
        <div class="w-100">
            {% for result in ticketresults %}
            <a href="index.php?action=createticket&groupid={{ result.id }}">
                {% endfor %}
                <button type="button" class="btn btn-primary btn-sm m-1">Create Ticket</button>

            </a>
        </div>
        <br>

        <table id="dtBasicExample" class="table table-striped table-bordered table-sm m-0" cellspacing="0"
               width="100%">

            <thead>
            <tr>
                <th class="th-sm">Id
                </th>
                <th class="th-sm">Creation Date
                </th>
                <th class="th-sm">Requester
                </th>
                <th class="th-sm">Title
                </th>
                <th class="th-sm">Description
                </th>
                <th class="th-sm">Author
                </th>
                <th class="th-sm">
                </th>
            </tr>
            </thead>
            <tbody>
            {% for result in ticketresults %}
                <tr>
                    <td><i class="fas fa-ticket-alt mr-3"></i>  {{ result.id }}</td>
                    <td>  {{ result.creation_date }}</td>
                    <td>  {{ result.requester }}</td>
                    <td>  {{ result.title }}</td>
                    <td>  {{ result.description }}</td>
                    <td>  {{ result.author }} </td>
                    <td><a class="mr-2" href="index.php?action=ticketdetails&id={{ result.id }}">Info</a></td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <th class="th-sm">Id
                </th>
                <th class="th-sm">Creation Date
                </th>
                <th class="th-sm">Requester
                </th>
                <th class="th-sm">Title
                </th>
                <th class="th-sm">Description
                </th>
                <th class="th-sm">Author
                </th>
                <th class="th-sm">
                </th>
            </tr>
            </tfoot>
        </table>
    </div>

{% endblock %}