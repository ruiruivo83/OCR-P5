{% extends "_layout.html.twig" %}


{% block topbar %}
    {{ include('/backend/user_topbar.html') }}
{% endblock %}

{% block body %}
    <div class="card m-1">
        <div class="card-header">
            <div class="w-100">
                GLOBAL INTERVENTIONS
            </div>

        </div>
        <div class="card-body p-0">
            <div class="w-100">
                <button type="button" class="btn btn-primary btn-sm m-1">Button</button>


            </div>
            <table id="dtBasicExample" class="table table-striped table-bordered table-sm m-0" cellspacing="0"
                   width="100%">

                <thead>
                <tr>
                    <th class="th-sm">Intervention Id
                    </th>
                    <th class="th-sm">Intervention Date
                    </th>
                    <th class="th-sm">Description
                    </th>
                    <th class="th-sm">Author
                    </th>
                    <th class="th-sm">Country
                    </th>
                    <th class="th-sm">Company
                    </th>
                    <th class="th-sm">Ticket Id
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for result in interventions %}
                    <tr>
                        <td>  {{ result.id }}</td>
                        <td>  {{ result.intervention_date }}</td>
                        <td>  {{ result.intervention_description }}</td>
                        <td>  {{ result.intervention_author }}</td>
                        <td>  {{ result.intervention_author_country }}</td>
                        <td>  {{ result.intervention_author_company }}</td>
                        <td>  {{ result.ticket_id }}</td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <th class="th-sm">Intervention Id
                    </th>
                    <th class="th-sm">Intervention Date
                    </th>
                    <th class="th-sm">Description
                    </th>
                    <th class="th-sm">Author
                    </th>
                    <th class="th-sm">Country
                    </th>
                    <th class="th-sm">Company
                    </th>
                    <th class="th-sm">Ticket Id
                    </th>
                </tr>
                </tfoot>
            </table>

        </div>
    </div>
{% endblock %}
